{
  "name": "SimpleBlock",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Simple interface for blocking content via the webRequest API.",
  "browser_action": {
    "default_icon": "enabled.png"
  },
  "background": {
    "scripts": ["default_filters.js", "block.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
     "16": "enabled.png",
     "48": "enabled_48.png"
  },
  "permissions": ["http://*/*", "https://*/*", "webRequest", "webRequestBlocking"],
  "incognito": "spanning"
}
